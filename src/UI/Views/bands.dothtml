@viewModel MusicLibrary.ViewModels.BandsViewModel, MusicLibrary
@masterPage Views/masterPage.dotmaster
@import Resource = MusicLibrary.Resources.Texts

<dot:Content ContentPlaceHolderID="HeaderContent">
    <dot:RequiredResource Name="style-css" />
</dot:Content>

<dot:Content ContentPlaceHolderID="PageContent">
    <div class="content-bg">
        <div class="wrap">
            <div class="main">
                <div class="content">
                    <h2>{{resource: Resource.Bands}}</h2>
                    <dot:Repeater DataSource="{{value: Bands}}" RenderWrapperTag="false">
                        <div class="image group">
                            <div class="grid images_3_of_1">
                                <a href=""><img class="logo-img" DataContext="{value: ImageStorageFile}" src="{value: "/SavedFiles/" + FileName}" alt="{value: DisplayName}"></a>
                            </div>
                            <div class="grid span_2_of_3">
                                <a href=""><h3>{{value: Name}}</h3></a>
                                <p>{{value: Description}}</p>
                            </div>
                        </div>
                    </dot:Repeater>
                </div>
                <div class="sidebar">
                    <div class="sidebar-list">
                        <h2>{{resource: Resource.Categories}}</h2>
                        <ul>
                            <dot:Repeater DataSource="{value: Categories}" RenderWrapperTag="false" RenderSettings.Mode="Server">
                                <li>
                                    <dot:LinkButton Text="{value: NameLocalized}" />
                                </li>
                            </dot:Repeater>
                        </ul>
                    </div>
                </div>
                <div class="clear"></div>
            </div>
        </div>
    </div>
</dot:Content>
